{
  "name": "saas-ai-marketing-platform",
  "version": "2.0.0",
  "description": "Advanced AI Marketing SaaS Platform with ML, Automation, and Collaboration",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "install:all": "npm install && cd client && npm install",
    "dev:all": "concurrently \"npm run dev\" \"cd client && npm start\"",
    "docker:build": "docker build -t ai-marketing-saas .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "migrate": "node scripts/migrate.js",
    "seed": "node scripts/seed.js"
  },
  "keywords": [
    "ai",
    "marketing",
    "saas",
    "content-generation",
    "machine-learning",
    "automation",
    "collaboration",
    "analytics"
  ],
  "author": "AI Marketing Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.19.2",
    "mongoose": "^8.4.1",
    "dotenv": "^16.4.5",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "multer": "^1.4.5-lts.1",
    "cloudinary": "^1.41.0",
    "nodemailer": "^6.9.7",
    "node-cron": "^3.0.3",
    "axios": "^1.6.2",
    "redis": "^4.6.10",
    "socket.io": "^4.7.4",
    "openai": "^4.48.1",
    "natural": "^6.10.4",
    "sentiment": "^5.0.2",
    "@tensorflow/tfjs-node": "^4.15.0",
    "stripe": "^14.7.0",
    "winston": "^3.11.0",
    "prom-client": "^15.0.0",
    "joi": "^17.11.0",
    "swagger-ui-express": "^5.0.0",
    "swagger-jsdoc": "^6.2.8",
    "sharp": "^0.33.0",
    "pdfkit": "^0.14.0",
    "exceljs": "^4.4.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "crypto": "^1.0.1",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "url": "^0.11.3",
    "querystring": "^0.2.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.3",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "concurrently": "^8.2.2",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ai-marketing-saas.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ai-marketing-saas/issues"
  },
