# ===========================================
# CONFIGURACIÓN DEL SERVIDOR
# ===========================================
PORT=3001
HOST=0.0.0.0
NODE_ENV=development

# ===========================================
# BASE DE DATOS
# ===========================================
DATABASE_URL="postgresql://feedback_user:feedback_password_2024@localhost:5432/ai_marketing_feedback?schema=public"

# ===========================================
# REDIS (CACHING Y COLAS)
# ===========================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD="redis_password_2024"

# ===========================================
# AUTENTICACIÓN Y SEGURIDAD
# ===========================================
JWT_SECRET="jwt_secret_super_seguro_2024_ai_marketing"
JWT_EXPIRES_IN="24h"
VALID_API_KEYS="api_key_1,api_key_2,api_key_3"

# ===========================================
# CORS Y ORIGENES PERMITIDOS
# ===========================================
ALLOWED_ORIGINS="http://localhost:3000,https://ai-marketing-feedback.com,https://staging.ai-marketing-feedback.com"

# ===========================================
# EMAIL (SMTP)
# ===========================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER="noreply@ai-marketing-feedback.com"
SMTP_PASS="smtp_password_2024"
SMTP_FROM="AI Marketing Feedback <noreply@ai-marketing-feedback.com>"

# ===========================================
# RATE LIMITING
# ===========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_FEEDBACK_MAX=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL="info"
LOG_FORMAT="combined"
LOG_FILE="logs/app.log"

# ===========================================
# MONITOREO Y MÉTRICAS
# ===========================================
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# ===========================================
# ANÁLISIS DE IA
# ===========================================
AI_SENTIMENT_MODEL="advanced"
AI_TOPIC_MODEL="latam_specialized"
AI_EMOTION_DETECTION=true
AI_CULTURAL_ANALYSIS=true

# ===========================================
# CONFIGURACIÓN REGIONAL
# ===========================================
DEFAULT_LANGUAGE="es"
DEFAULT_REGION="LATAM"
SUPPORTED_LANGUAGES="es,pt,en"
SUPPORTED_REGIONS="MX,AR,BR,CO,CL,PE,UY,PY,BO,EC,VE,LATAM"

# ===========================================
# ALERTAS Y NOTIFICACIONES
# ===========================================
ALERT_EMAIL="alerts@ai-marketing-feedback.com"
ALERT_SLACK_WEBHOOK="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
ALERT_DISCORD_WEBHOOK="https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK"

# ===========================================
# ARCHIVOS Y UPLOADS
# ===========================================
UPLOAD_MAX_SIZE="10mb"
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/gif,application/pdf,text/csv"
UPLOAD_PATH="uploads"

# ===========================================
# CACHE
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=1000
CACHE_ENABLED=true

# ===========================================
# WEBSOCKET
# ===========================================
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=1000

# ===========================================
# DESARROLLO
# ===========================================
DEBUG="app:*"
NODE_OPTIONS="--max-old-space-size=4096"
TSC_COMPILE_ON_ERROR=true

